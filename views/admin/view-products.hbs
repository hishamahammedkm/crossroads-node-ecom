<section>
  <div class="container">
      <div class="row">
          <a class="btn btn-primary ml-auto" href="admin/add-product">ADD Products</a>
      </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img style="width: 50p;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>