<section>
  <div class="container">
    <div class="row">
      {{#each products}}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">{{this.Name}}</h5>
            <p class="card-text">
            <h2>{{this.Price}}</h2>
            <p>{{this.Description}}</p>
            <a href="#" class="btn btn-primary">Add to cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>

</section>